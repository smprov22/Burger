<h1>Burgers!</h1>

<div class="row">
    <center>
        <!-- Left side (ready to eat) -->
        <div class="col-md-6">
            <h4 class="red_font">Ready to eat!</h4>
            <div id="ready_to_eat">

                {{#each burgers}}
                {{#unless devoured}}
                <form action="api/burgers/{{id}}" method="POST">
                    <div class="input-group">
                        <li class="form-control">{{id}}. {{name}}</li>
                        <span class="input-group-btn">
                            <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                        </span>
                    </div>
                </form>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <!-- Right side (already eaten) -->
        <div class="col-md-6">
            <h4 class="red_font">Already eaten!</h4>
            <div id="already_eaten">

                <!-- Dynamically Insert Eaten Burgers Here -->
                {{#each burgers}}
                {{#if this.devoured}}
                <div class="input-group">
                    <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="btn btn-info whine-button" type="button">Whine!</button>
                    </span>
                </div>
                {{/if}}
                {{/each}}

            </div>
        </div>
    </center>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>